[alias]
    ci = commit
    dst = diff --stat HEAD
    st = status
    s  = status --short --branch
    wu = log --stat origin..@{0}
    wup = log -p origin..@{0}
    unstage = reset HEAD
	staged = diff --cached
	unstaged = diff
	both = diff HEAD
	oneline = log --pretty=oneline
    df = diff
    lg = log -p
    recent = log --oneline --since=2.weeks
[gc]
	auto = 0

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
