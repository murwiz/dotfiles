[user]
    name = Jeff Boes
    email = jboes@ziprecruiter.com
[alias]
    ci = commit
    dst = diff --stat HEAD
    st = status
    s  = status --short --branch
    wu = log --stat origin..@{0}
    wup = log -p origin..@{0}
    wst = diff --stat origin..@{0}
    unstage = reset HEAD
	  staged = diff --cached
	  unstaged = diff
	  both = diff HEAD
	  oneline = log --pretty=oneline
    df = diff
    lg = log -p
    recent = log --oneline --since=2.weeks
    contains = branch -r --contains
[gc]
	auto = 0

[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    interactive = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
#[color]
#    ui = true
[color "diff"]
    whitespace = red reverse
[core]
   whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[push]
	default = simple

[url "git@github.com:"]
    pushInsteadOf = https://github.com/
    pushInsteadOf = http://github.com/
    pushInsteadOf = git://github.com/
